<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/complaintDet_toolbar"
        app:title="COMPLAINT"

        app:titleTextColor="#ffffff"
        android:textAlignment="center"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:background="#999999"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" COMPLAINT ID : "
                    android:textColor="#cccccc"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/compDet_compId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#dddddd"
                    android:text="XXX-XXXX-XXXX-XXX"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/forDet_cirImg"
                    android:src="@drawable/contact"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="229dp"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/compDet_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="YASHWANTH GAHLOT"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/compDet_call"
                            android:layout_width="81dp"
                            android:layout_height="36dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/call_button" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MOBILE : "
                            android:textColor="#ffffff"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="8969619942"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/compDet_mob"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DATE OF REG : "
                            android:textColor="#ffffff"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="11/01/2020"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/compDet_date"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#000000"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="COMPLAINT DETAILS :  "
                    android:layout_marginLeft="25dp"
                    android:textSize="18dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:id="@+id/compDet_det"
                android:minHeight="300dp"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:text="vsddgdrbdbdfbdfbsbdxbvxfbndfndfbfxbdfnfgncbxffbdfnbdfn"
                android:paddingLeft="30dp"
                android:textColor="#ffffff"
                android:paddingRight="30dp"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>